<!-- 300 DPI correspond à 118,11 pixels par centimètre.
  On va donc utiliser l'approximation: 1mm = 12 pixels
 -->
<Map background-color="white">
  <Style name="inner">
    <Rule>
      <!-- inner region with dots -->
      <PolygonPatternSymbolizer file="images/point-300.png"/>
    </Rule>
  </Style>



  <Style name="sidewalks-space">
    <Rule>
      <!-- confort space (white) -->
      <LineSymbolizer stroke="#fff" stroke-width="48" stroke-linejoin="round" stroke-linecap="round" />
    </Rule>
  </Style>

  <Style name="sidewalks">
    <Rule>
      <LineSymbolizer stroke="#000" stroke-width="12" stroke-linejoin="round" stroke-linecap="round" />
    </Rule>
  </Style>



  <Style name="islands-space">
    <Rule>
      <LineSymbolizer stroke="#fff" stroke-width="144" stroke-linejoin="round" stroke-linecap="round" />
    </Rule>
  </Style>
  <Style name="islands">
    <Rule>
      <LineSymbolizer stroke="#000" stroke-width="96" stroke-linejoin="round" stroke-linecap="round" />
    </Rule>
  </Style>


  <Style name="crossings">
    <Rule>
      <Filter>[type] = crossing</Filter>
      <!-- TODO: add images for streets with a different width -->
      
      <!-- 3 meter street -->
      <PointSymbolizer file="images/crossing-3-300.png" transform="rotate(180 + (-[orientatio] / 3.14) * 180)" allow-overlap="yes" />
    </Rule>
  </Style>



  <Layer>
    <StyleName>inner</StyleName>
    <Datasource>
      <Parameter name="file">ballainvilliers/ballainvilliers-inner.shp</Parameter>
      <Parameter name="type">shape</Parameter>
    </Datasource>
  </Layer>
  <Layer>
    <StyleName>islands-space</StyleName>
    <Datasource>
      <Parameter name="file">ballainvilliers/ballainvilliers-islands.shp</Parameter>
      <Parameter name="type">shape</Parameter>
    </Datasource>
  </Layer>

  <Layer>
    <StyleName>sidewalks-space</StyleName>
    <Datasource>
      <Parameter name="file">ballainvilliers/ballainvilliers-sidewalks.shp</Parameter>
      <Parameter name="type">shape</Parameter>
    </Datasource>
  </Layer>


    <Layer>
    <StyleName>crossings</StyleName>
    <Datasource>
      <Parameter name="file">ballainvilliers/ballainvilliers-crossings.shp</Parameter>
      <Parameter name="type">shape</Parameter>
    </Datasource>
  </Layer>

  <Layer>
    <StyleName>sidewalks</StyleName>
    <Datasource>
      <Parameter name="file">ballainvilliers/ballainvilliers-sidewalks.shp</Parameter>
      <Parameter name="type">shape</Parameter>
    </Datasource>
  </Layer>
  <Layer>
    <StyleName>islands</StyleName>
    <Datasource>
      <Parameter name="file">ballainvilliers/ballainvilliers-islands.shp</Parameter>
      <Parameter name="type">shape</Parameter>
    </Datasource>
  </Layer>

</Map>